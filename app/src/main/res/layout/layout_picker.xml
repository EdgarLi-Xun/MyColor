<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <include layout="@layout/layout_title" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.81" >

        <ImageView
            android:id="@+id/picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/pos"
                android:layout_width="64px"
                android:layout_height="64px"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="127dp"
                android:layout_marginTop="85dp"
                android:src="@drawable/pos"
                android:visibility="invisible" />
        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="5dp" >

        <Button
            android:id="@+id/color_picked"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.09"
            android:background="#11000000"
            android:gravity="center"
            android:text="RGB" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="73dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@android:color/transparent"
                android:gravity="left|center"
                android:text="HEX" />

            <TextView
                android:id="@+id/HEX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.99"
                android:gravity="center" />

            <Button
                android:id="@+id/copy_HEX"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/copy"
                android:gravity="center" />
        </LinearLayout>

     <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="68dp"
            android:background="#FFF8F8F8" >

            

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/collect"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/collect"
                    android:gravity="center_horizontal" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/share"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/share" />
            </RelativeLayout><RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">

                <Button android:id="@+id/map_storage" android:layout_width="25dp" android:layout_height="25dp" android:layout_centerHorizontal="true" android:layout_centerVertical="true" android:background="@drawable/map" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/camera"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/camera" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>